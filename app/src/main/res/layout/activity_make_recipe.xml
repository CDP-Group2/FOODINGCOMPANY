    <LinearLayout
        android:id="@+id/makeRecipeMenu"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_above="@id/menu_bar"
        android:layout_height="wrap_content">

        <ImageButton
            style="@style/icons"
            android:layout_height="@dimen/filter_menu_icon_size"
            android:id="@+id/addButton"
            android:src="@mipmap/camera" />

        <ImageButton
            style="@style/icons"
            android:layout_height="@dimen/filter_menu_icon_size"
            android:id="@+id/deleteButton"
            android:src="@mipmap/dustbin2"  />

        <ImageButton
            style="@style/icons"
            android:layout_height="@dimen/filter_menu_icon_size"
            android:id="@+id/makeButton"
            android:src="@mipmap/upload_2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="25dp"
        android:layout_below="@id/recipeNameLayout"
        android:layout_above="@id/makeRecipeMenu"
        android:layout_marginTop="7dp">

        <Button
            android:id="@+id/clearBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="-10dp"
            android:layout_marginRight="-10dp"
            android:textSize="12dp"
            android:textColor="#5c5c5c"
            android:textAllCaps="true"
            android:layout_gravity="end"
            android:text="clear"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ListView
                android:id="@+id/ingredientList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:choiceMode="multipleChoice"
                android:scrollbars="vertical" />
            <ListView
                android:id="@+id/ingredientAmountList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:textAlignment="center"
                android:choiceMode="multipleChoice"
                android:scrollbars="vertical" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/menu_bar"
        style="@style/menu_bar" />

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="@dimen/menu_bar_margin"
        android:layout_alignParentBottom="true">

        <ImageButton
            style="@style/icons"
            android:layout_height="@dimen/menu_icon_size"
            android:id="@+id/setting"
            android:src="@mipmap/settings" />

        <ImageButton
            style="@style/icons"
            android:layout_height="@dimen/menu_icon_size"
            android:id="@+id/makeMenu"
            android:src="@mipmap/compose_color" />

        <ImageButton
            style="@style/icons"
            android:layout_height="@dimen/menu_icon_size"
            android:id="@+id/myPage"
            android:src="@mipmap/user" />

        <ImageButton
            style="@style/icons"
            android:layout_height="@dimen/menu_icon_size"
            android:id="@+id/logout"
            android:src="@mipmap/exit" />

    </LinearLayout>

</RelativeLayout>