<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/searchActivity"
    tools:context=".activity.SearchActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:textColor="#111"
        android:textAllCaps="true"
        android:textSize="30dp"
        android:text="search" />

    <View
        android:id="@+id/title_bar"
        style="@style/title_bar" />

    <View
        android:id="@+id/menu_bar"
        style="@style/menu_bar" />

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="@dimen/menu_bar_margin"

        android:layout_alignParentBottom="true">

        <ImageButton
            style="@style/icons"
            android:layout_height="@dimen/menu_icon_size"
            android:id="@+id/setting"
            android:src="@mipmap/settings" />

        <ImageButton
            style="@style/icons"
            android:layout_height="@dimen/menu_icon_size"
            android:id="@+id/search"
            android:src="@mipmap/search" />

        <ImageButton
            style="@style/icons"
            android:layout_height="@dimen/menu_icon_size"
            android:id="@+id/camera"
            android:src="@mipmap/camera" />

        <ImageButton
            style="@style/icons"
            android:layout_height="@dimen/menu_icon_size"
            android:id="@+id/recentlyViewed"
            android:src="@mipmap/list" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/title_bar">

        <EditText
            android:id="@+id/searchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_below="@+id/title_bar"
            android:layout_centerHorizontal="true"
            android:hint="재료명"
            android:textColor="#111"
            android:ems="5"
            android:inputType="textPersonName|textNoSuggestions"
            android:background="@drawable/edit_text_border"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginRight="8dp"
            android:text="" />

        <ImageButton
            style="@style/icons"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/addButton"
            android:src="@mipmap/add" />

    </LinearLayout>

    <TextView
        android:id="@+id/JsonTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lsearch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#111"
        android:text="No match" />

    <ListView
        android:id="@+id/resultList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:layout_marginLeft="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Lsearch"
        android:layout_above="@+id/menu_bar"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <!--<Button
        android:id="@+id/MylistBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/searchText"
        android:layout_below="@+id/resultList"
        android:text="My list" />-->

</RelativeLayout>
